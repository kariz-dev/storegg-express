<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-body -->
            <div class="card-body">
              <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form tambah pembayaran</h3>
                  </div>
                  <!-- /.card-header -->

                  <form action="/payment/create" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name">Tipe</label>
                        <select
                            data-placeholder="Pilih bank"
                            id="type"
                            class="form-control select2"
                            style="width: 100%"
                            name="type"
                            required
                          >
                            <option selected="selected" disabled>Pilih tipe pembayaran</option>
                            <option value="Transfer via bank">Transfer via bank</option>
                            <option value="Virtual account">Virtual account</option>
                            <option value="Kartu kredit">Kartu kredit</option>
                          </select>
                      </div>
                      <div class="form-group">
                        <label for="paymentName">Bank</label>
                        <div class="select2-purple">
                          <select
                            data-placeholder="Pilih bank"
                            id="banks"
                            class="form-control select2"
                            style="width: 100%"
                            name="banks"
                            required
                          >
                            <option selected="selected" disabled>Pilih No Rekening</option>
                            <% banks.forEach(bank => { %>
                            <option value="<%= bank._id %>">
                              <%= bank.name %> (<%= bank.bankName %> - <%= bank.noRekening %>)
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %> 
<%- include('../../partials/js.ejs') %>
