<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %> 
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-body -->
            <div class="card-body">
              <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Tambah Voucher</h3>
                  </div>
                  <!-- /.card-header -->

                  <!-- form start -->
                  <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name">Nama game</label>
                        <input
                          type="string"
                          name="name"
                          class="form-control"
                          id="name"
                          placeholder="Masukan nama game"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label>Kategory</label>
                        <select
                          id="category"
                          class="form-control select2"
                          style="width: 100%"
                          name="category"
                          required
                        >
                          <option selected="selected" disabled>
                            Pilih koin
                          </option>
                          <% category.forEach(category => { %>
                          <option value="<%= category._id %>">
                            <%= category.name %>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                      <div class="form-group">
                        <label>Nominal</label>
                        <div class="select2-purple">
                          <select
                            data-placeholder="Pilih nominal"
                            id="nominals"
                            class="form-control select2"
                            multiple="multiple"
                            style="width: 100%"
                            name="nominals"
                            required
                          >
                            <% nominal.forEach(nominal => { %>
                            <option value="<%= nominal._id %>">
                              <%= nominal.coinName %> <%= nominal.coinQuantity
                              %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="thumbnail">Unggah gambar</label>
                        <input
                          type="file"
                          name="thumbnail"
                          class="d-block"
                          id="thumbnail"
                          placeholder="Masukan gambar game"
                          required
                        />
                        <br />
                        <img src="" alt="" id="preview" />
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %> 
<%- include('../../partials/js.ejs') %>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();

      reader.onload = function (e) {
        $("#preview").attr("src", e.target.result);
        $("#preview").attr("width", "150px");
        $("#preview").attr("height", "150px");
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#thumbnail").change(function () {
    readURL(this);
  });
</script>
